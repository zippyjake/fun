function randInt(min,max) {
  return Math.floor((Math.random() * (max - min + 1)) + min);
}

var total = 0
for (var i = 0; i < 5; i++) {
  var somerand = randInt(1,6);
  console.log("You rolled a " + somerand);
  total = total + somerand;
}

console.log("Total: " + total)
